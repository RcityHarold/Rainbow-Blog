# Rainbow-Blog Environment Configuration

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=3000
ENVIRONMENT=development
LOG_LEVEL=info

# Database Configuration (SurrealDB)
DATABASE_URL=http://localhost:8000
DATABASE_NAMESPACE=rainbow
DATABASE_NAME=blog
DATABASE_USERNAME=root
DATABASE_PASSWORD=root

# Rainbow-Auth Integration
AUTH_SERVICE_URL=http://localhost:8080
AUTH_SERVICE_TOKEN=your-service-token-here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRY=7d
JWT_REFRESH_EXPIRY=30d

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600

# S3/MinIO Storage Configuration
STORAGE_TYPE=s3
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=rainbow-blog
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_USE_PATH_STYLE=true
# Maximum upload size in bytes (50MB)
MAX_UPLOAD_SIZE=52428800

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=Rainbow Blog
SMTP_FROM_EMAIL=noreply@rainbow-blog.com

# Frontend URLs
FRONTEND_URL=http://localhost:3001
PASSWORD_RESET_URL=http://localhost:3001/reset-password

# Content Settings
MAX_ARTICLE_LENGTH=50000
MAX_COMMENT_LENGTH=5000
MAX_BIO_LENGTH=160
DEFAULT_ARTICLES_PER_PAGE=20
DEFAULT_COMMENTS_PER_PAGE=50

# Feature Flags
ENABLE_REGISTRATIONS=true
ENABLE_COMMENTS=true
ENABLE_SUBSCRIPTIONS=false
ENABLE_PUBLICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Search Configuration
SEARCH_MIN_LENGTH=2
SEARCH_MAX_RESULTS=100

# Image Processing
IMAGE_MAX_WIDTH=2000
IMAGE_MAX_HEIGHT=2000
IMAGE_QUALITY=85
ALLOWED_IMAGE_TYPES=jpeg,jpg,png,gif,webp

# Recommendation Engine
RECOMMENDATION_BATCH_SIZE=10
RECOMMENDATION_UPDATE_INTERVAL=3600

# Stripe Configuration (Optional)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Google Analytics (Optional)
GA_TRACKING_ID=UA-XXXXXXXXX-X

# Sentry Error Tracking (Optional)
SENTRY_DSN=https://...@sentry.io/...

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# Security
SESSION_SECRET=your-session-secret-here-change-in-production
SECURE_COOKIES=false
BCRYPT_COST=12

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=0.1

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=rainbow-blog-backups